<div id="header"><h1><%=h @user.login %></h1></div>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

 <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :is_admin %><br />
    <%= f.check_box :is_admin %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
